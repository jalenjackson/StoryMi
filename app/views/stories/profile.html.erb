                  <% end %>
                      <% end %>
                </figure>
                </a>



            <% end %>

        <% else %>
        <% end %>


      </div>

    </div>



      <% if @user.videos.exists? %>

          <h1 style="text-align: center;;"><%= @user.firstname %>'s Videos</h1>
      <% end %>
      <div style="margin-top:85px;" id="columns">

        <% if @user.videos.exists? %>
