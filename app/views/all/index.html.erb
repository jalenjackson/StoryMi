<link href="https://fonts.googleapis.com/css?family=Nunito+Sans:900" rel="stylesheet">

<style>
  body {
    font-family: sans-serif;
    font-size: .9rem;
    background: rgb(31,31,31);
  }
  h1 {
    text-align: center;
    color:white !important;
    font-size:50px;
    margin-top:140px;
    font-family: 'Nunito Sans', sans-serif;
  }

  .module {
    background:blue;
    height: 400px;
    width:300px !important;
    display: inline-block;
    position: relative;
    margin: 0  !important;
    text-align: center;
  }

  .center-area {
    margin: 0 auto;
    display: block;
    width: 100%;
    text-align:center;
  }

  .module:hover .overlay {
    background: none;
  }
  /* 1 column: 320px */
  .autowide {
    width: 100% !important;
    height: 100%;
    text-align:center !important;
    display: block;
    margin: 0 auto;
    margin-left: 30px;
  }
  .autowide img {
    float: left;
    margin: 0 0 0;
  }
  .autowide .module {
    background-color: lightgrey;
    border-radius: .25rem;
  }
  .autowide .module p {
  }

  /* 2 columns: 600px */
  @media only screen and (min-width: 600px) {
    .autowide .module {
      float: left;
      margin-right: 2.564102564102564%;
      width: 48.717948717948715%;
    }
    .autowide .module:nth-child(2n+0) {
      margin-right: 0;
    }
    .center-area {
      margin: 0 !important;
    }

    .autowide {
      margin: 0 !important;
    }
    .module {
      width: 100% !important;
    }
  }

  @media only screen and (min-width: 400px) {

    .center-area {
      margin: 0 !important;
    }

    .autowide {
      margin: -100px !important;
    }
    .module {
      width: 100% !important;
    }
  }

  @media only screen and (min-width: 300px) {
    .center-area {
      margin: 0 !important;
    }

    .autowide {
      margin: 0px !important;
    }
    .module {
      width: 100% !important;
    }
  }

    /* 3 columns: 768px */
  @media only screen and (min-width: 768px) {
    .autowide .module {
      width: 31.623931623931625%;
    }
    .autowide .module:nth-child(2n+0) {
      margin-right: 2.564102564102564%;
    }
    .autowide .module:nth-child(3n+0) {
      margin-right: 0;
    }
  }

  /* 4 columns: 992px and up */
  @media only screen and (min-width: 992px) {
    .autowide .module {
      width: 23.076923076923077%;
    }
    .autowide .module:nth-child(3n+0) {
      margin-right: 2.564102564102564%;
    }
    .autowide .module:nth-child(4n+0) {
      margin-right: 0;
    }
  }

    .overlay {
      position: absolute;
      top:0;
      left: 0;
      width: 100%;
      height: 100%;
      background:rgba(0,0,0,0.8);
      transition: all 400ms ease-in-out;
    }
</style>

