<% content_for :title, "#{@article.title} - TellAFiction" %>

<style>
  img {
    filter: blur(10px);
    transition: all 600ms ease-in-out;
  }
    .edit{
      background:white;
      font-size:16px;
      width:100px;
      border-radius:.3em;
      color:black;
      text-align: center;
      cursor: pointer;
      margin-left: 40px;
      transform:translateY(30px)


    }

  @media only screen
  and (min-device-width: 320px)
  and (max-device-width: 480px)
  and (-webkit-min-device-pixel-ratio: 2) {
    /* For mobile phones: */
    body {
      background: white !important;
    }
  }

  .mobile-brand {
    background: black !important;
    position: absolute;
    left: 0 !important;
  }



    .container{
      margin-top:0px !important;
    }

    .fr-view {
      width:100%;
      word-break: break-all;
    }
    .edit > h1{
      font-weight:lighter !important;
      margin-top:-2px;
    }
    .fr-view{
      line-height:10px !important;
    }
    .article-title{
      margin-top:-10px;
      width:100%;
      height:300px;
      background:
      <% if @article.cover.present? %>
          url(
      <%= @article.cover.url(:large) %> ) no-repeat center center fixed #000;
      <% else %>
        black;
      <% end %>

      filter: blur(5px);
      background-size: cover;
      background-repeat:no-repeat;

    }
    .article-name{
      text-align: center;
      color:white;
      font-size:65px;
      font-weight:100;
      transform:translateY(100px) !important;
    }

    .container{
      margin-top: -100px;
    }
</style>
<div class="article-title">
  <h1 class="article-name animated "><%= truncate(@article.title, length: 30 ) %></h1>
  <% if user_signed_in? %>
      <% if @article.user.id == current_user.id   %>
          <p class="edit">Continue Editing</p>
          <% if !@article.ispublished?  %>
              <%= link_to  publish_article_path(@article), class:'link-to',  :method => :put , :onclick => 'alertify.alert("Congragulations your story is published "); $(".link-to").fadeOut("slow");' do %>
                  <div style="margin-top:70px;" class="edit">
                    Publish Story
                  </div>

              <% end %>

          <% end %>
      <% end %>
  <% end %>
</div>

<div  class="container">
  <div style="margin-top:70px;" class="fr-view">
    <%= raw @article.body %>
  </div>
  <div id="disqus_thread"></div>

</div>

