  }


  h1 {
    text-align:center;
    font-family: 'Nunito Sans', sans-serif;
    color:white;
    font-size:50px;
    font-weight: 900;
    margin-top:100px;

  }



  .form-fields{

    opacity: 0;
    transform: translateY(30px);
    animation: move-up 500ms ease-in-out forwards 1 300ms;
  }

  @keyframes move-up {
